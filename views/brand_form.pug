extends layout 
block content 

  h1= title 
  form(method='POST' action='')
    div
      label(for='name') Name*:
      input#name(type='text', placeholder='Name of brand' name='name' maxlength='100' required='true' value=(undefined===brand ? '' : brand))
    div  
      label(for='about') About: 
      textarea#about(type='text', placeholder='About the brand' name='about') #{undefined===about ? '' : about}
    if status 
        button(type='submit') Update
    else 
        button(type='submit')  Add
    button 
        a(href='./') Cancel

  if errors 
    ul
      for error in errors 
        li= error.msg