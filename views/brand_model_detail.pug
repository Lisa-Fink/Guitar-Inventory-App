extends layout 

block content
  div
    a(href='../') #{'Brands'}
    span= ' > '
    a(href=brand.url) #{brand.name}
    span= ' > ' + model


  h1= title
  span
    a(href='../../models/' + model + '/' + modelID + '/update') Edit #{model} Model #{' '}
    a(href='../../models/' + model + '/' + modelID + '/delete') Delete #{model} Model

  h2= model + ' Series'
  a(href='/series/create?brand=' + brand._id + '&model=' + model) Add a new #{brand.name} #{model} Series

  ul
    each guitar in seriesList
      li 
        a(href= model + '/' + guitar.series) #{guitar.series}
    else 
      li The are no guitars

  h2= 'All ' + title
  ul
    each guitar in guitarList
      li 
        a(href= model + '/' + guitar.series + '/' + guitar.serialNum) #{guitar.series}
        span= ` - Color: ${guitar.color}, Price:  $${guitar.price}`
    else 
      li The are no guitars
