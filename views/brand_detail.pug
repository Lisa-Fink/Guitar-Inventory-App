extends layout 

block content
  div
    a(href='/brands') #{'Brands'}
    span= ' > ' + brand

  h1= title
  span
    a(href='/brands/' + brand + '/update') Edit #{brand} Brand #{' '}
    a(href='/brands/' + brand + '/delete') Delete #{brand} Brand 

  h2= 'Models'
  a(href='/models/create?brand=' + brand) Add a new #{brand} Model
  ul
    each guitar in guitarModels
        li 
            a(href='/brands/' + brand + '/' + guitar.model) #{guitar.model}
    else 
        li= 'No Models'

  h2= `All ` +  title
  ul
    each instance in guitarInstance
        li 
            a(href= `${brand}/${instance.model}/${instance.series}/${instance.serialNum}`) #{instance.series}
            span= ` - Color: ${instance.color}, Price:  $${instance.price}`
    else 
      li= 'None in Stock'