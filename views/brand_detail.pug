extends layout 

block content
  div
    a(href='/brands') #{'Brands'}
    span= ' > ' + brand

  h1= title
  h2= 'Models'
  ul
    each guitar in guitarModels
        li 
            a(href=guitar.url) #{guitar.model}
    else 
        li= 'No Models'

  h2= `All ` +  title
  ul
    each instance in guitarInstance
        li 
            a(href=instance.url) #{instance.series}
            span= ` - Color: ${instance.color}, Price:  $${instance.price}`
    else 
      li= 'None in Stock'